{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "NTP configuration",
  "description": "Specifies NTP network time sync daemon configuration",
  "configFile": {
    "path": "/etc/ntp.conf",
    "toJSON": "ntpparser",
    "fromJSON": ["ntpparser", "-s"],
    "restartDelayMS": 4000,
    "service": "ntpd"
  },

  "definitions": {
    "entry_common": {
      "type": "object",
      "required": ["type", "address"],
      "properties": {
        "type": {
          "type": "string",
          "title": "Entry type",
          "enum": ["pool", "server", "peer", "broadcast", "manycastclient"],
          "default": "server",
          "propertyOrder": 1
        },
        "address": {
          "type": "string",
          "title": "Server address",
          "minLength": 1,
          "propertyOrder": 2
        },
        "version": {
          "type": "integer",
          "title": "NTP version",
          "enum": [1, 2, 3, 4],
          "default": 4
        },
        "prefer": {
          "type": "boolean",
          "title": "Preferred",
          "_format": "checkbox",
          "default": false
        },
        "minpoll": {
          "type": "integer",
          "title": "Minimum poll interval (power of 2) in seconds",
          "minimum": 4,
          "maximum": 17,
          "default": 6
        }
      },
      "required": ["type", "address"]
    },
    "plus_maxpoll": {
      "type": "object",
      "properties": {
        "maxpoll": {
          "type": "integer",
          "title": "Maximum poll interval (power of 2) in seconds",
          "minimum": 4,
          "maximum": 17,
          "default": 10
        }
      }
    },
    "plus_ttl": {
      "type": "object",
      "properties": {
        "ttl": {
          "type": "integer",
          "title": "TTL",
          "minimum": 1,
          "maximum": 255,
          "default": 127
        }
      }
    },
    "plus_burst": {
      "type": "object",
      "properties": {
        "burst": {
          "type": "boolean",
          "title": "Burst if server is reachable (burst)",
          "_format": "checkbox",
          "default": false
        },
        "iburst": {
          "type": "boolean",
          "title": "Burst if server is unreachable (iburst)",
          "_format": "checkbox",
          "default": false
        }
      }
    },
    "plus_key": {
      "type": "object",
      "anyOf": [
        {
          "oneOf": [
            {
              "required": ["autokey"],
              "properties": {
                "autokey": {
                  "type": "boolean",
                  "title": "Autokey",
                  "_format": "checkbox",
                  "default": false
                }
              }
            },
            {
              "required": ["key"],
              "properties": {
                "key": {
                  "type": "integer",
                  "title": "Encryption key",
                  "minimum": 1,
                  "maximum": 65534
                }
              }
            }
          ]
        },
        {
          "not": {
            "required": ["key", "autokey"]
          }
        }
      ]
    },
    "entry_pool": {
        "allOf": [
            {
              "not": {
                "required": ["key", "autokey"]
              }
            },
            { "$ref": "#/definitions/entry_common" },
            { "$ref": "#/definitions/plus_maxpoll" },
            { "$ref": "#/definitions/plus_burst" }
        ]
    },
    "entry_server": {
        "allOf": [
            { "$ref": "#/definitions/entry_common" },
            { "$ref": "#/definitions/plus_key" },
            { "$ref": "#/definitions/plus_burst" },
            { "$ref": "#/definitions/plus_maxpoll" }
        ]
    },
    "entry_peer": {
        "allOf": [
            { "$ref": "#/definitions/entry_common" },
            { "$ref": "#/definitions/plus_key" },
            { "$ref": "#/definitions/plus_maxpoll" }
        ]
    },
    "entry_broadcast": {
        "allOf": [
            { "$ref": "#/definitions/entry_common" },
            { "$ref": "#/definitions/plus_key" },
            { "$ref": "#/definitions/plus_ttl" }
        ]
    },
    "entry_manycastclient": {
        "allOf": [
            { "$ref": "#/definitions/entry_common" },
            { "$ref": "#/definitions/plus_key" },
            { "$ref": "#/definitions/plus_maxpoll" },
            { "$ref": "#/definitions/plus_ttl" }
        ]
    },
    "entry_any": {
        "allOf": [
            { "$ref": "#/definitions/entry_common" },
            { "$ref": "#/definitions/plus_key" },
            { "$ref": "#/definitions/plus_burst" },
            { "$ref": "#/definitions/plus_maxpoll" },
            { "$ref": "#/definitions/plus_ttl" },
            { "defaultProperties": [ "type", "address" ] }
        ]
    }
  },

  "properties": {
    "data": {
        "type": "array",
        "title": "NTP servers list",
        "_format": "tabs",
        "items": {
            "headerTemplate": "Entry{{ |self.address}}",
            "$ref": "#/definitions/entry_any"
        }
      },
      "etc": {
        "type": "array",
        "items": {
            "type": "string"
        },
        "options": {
          "collapsed": true
        }
      }
  },
  "required": ["data"]
}
